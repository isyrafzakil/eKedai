<%= simple_form_for(@book,  html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, label: false, placeholder: 'Name', required: true %>
    <%= f.input :author, label: false, placeholder: 'Author', required: true %>
    <%= f.input :description, label: false, placeholder: 'Description', required: true %>
    <%= f.input :price, label: false, placeholder: 'Price', required: true %>
    <%= f.input :availability, label: false, placeholder: 'Availability' %>

    <%= f.button :submit, class: 'btn btn-danger btn-block' %>
<% end %>
