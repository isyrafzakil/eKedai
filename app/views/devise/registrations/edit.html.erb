<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Enter email' %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", label: false, placeholder: 'Enter new password', hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, label: false, placeholder: 'Re-enter new password', required: false %>
    <%= f.input :current_password, label: false, placeholder: 'Enter current password', hint: "we need your current password to confirm your changes", required: true %>

    <%= f.button :submit, "Update", class: 'btn btn-success btn-block' %>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
